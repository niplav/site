#!/usr/bin/env rc

pomfile='/home/niplav/proj/site/data/ispomodoro.csv'

fn readval {
        dmenu -l 10 -fn 'monospace:size=10' -nb '#ffffff' -nf '#000000' -sb '#ffb405'
}

datetime=`{date --iso-8601}
ispom=`{seq 0 1 | shuf | tail -1}

if (~ $ispom 0) {
	printf '%s,%s\n' $datetime $ispom >>$pomfile
}; if not {
	printf '%s,%s\n' $datetime $ispom >>$pomfile
	spt -e pomscript
}
