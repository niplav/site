#!/usr/bin/env rc

lumfile='/home/niplav/proj/site/data/islight.csv'

datetime=`{date --iso-8601}
islum=`{seq 0 1 | shuf | tail -1}

if (~ $islum 0) {
	printf 'no lumenator\n'
	printf '%s,%s\n' $datetime $islum >>$lumfile
}; if not {
	printf 'lumenator\n'
	printf '%s,%s\n' $datetime $islum >>$lumfile
	onlum
}
